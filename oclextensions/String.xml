<extensions>
	<operation source="String" name="startsWith" returnType="Boolean">
		<parameter>
			<par name="aString" type="String"/>
		</parameter>
		<body><![CDATA[
			$self[0, $aString.length] == $aString
		]]>
		</body>
	</operation>
	
	<operation source="String" name="replace" returnType="String">
		<parameter>
			<par name="what" type="String"/>
			<par name="with" type="String"/>
		</parameter>
		<body><![CDATA[
			$self.gsub $what, $with
		]]>
		</body>
	</operation>
	
	<operation source="String" name="toLowerCase" returnType="String">
		<body><![CDATA[
			$self.downcase
		]]>
		</body>
	</operation>
	
	<operation source="String" name="toInteger" returnType="Integer">
		<body><![CDATA[
			$self.to_i
		]]>
		</body>
	</operation>
</extensions>